@model IEnumerable<bid_app_pragmatic.Models.Auction>

@{
    ViewData["Title"] = "Current Auctions";
}

<div class="auction-hero text-center text-white py-5 mb-5">
    <h1 class="display-5 fw-bold">All Auctions</h1>

    <a asp-controller="Auction" asp-action="Create" class="btn btn-lg btn-light fw-semibold shadow">
        <i class="bi bi-plus-circle"></i> Place your auction now
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="text-center py-5">
        <img src="~/images/empty-auctions.svg" alt="No auctions" class="mb-4" style="max-width: 200px;" />
        <h4 class="fw-bold mb-2">No Active Auctions</h4>
        <p class="text-muted mb-4">Be the first to add an auction!</p>
        <a asp-controller="Auction" asp-action="Create" class="btn btn-primary">Create an Auction</a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var auction in Model)
        {
            var timeRemaining = auction.EndDate - DateTime.Now;
            string timeText, badgeClass;

            if (timeRemaining.TotalDays >= 1)
            {
                timeText = $"{(int)timeRemaining.TotalDays} days left";
                badgeClass = "bg-success";
            }
            else if (timeRemaining.TotalHours >= 1)
            {
                timeText = $"{(int)timeRemaining.TotalHours} hours left";
                badgeClass = "bg-warning text-dark";
            }
            else if (timeRemaining.TotalMinutes >= 1)
            {
                timeText = $"{(int)timeRemaining.TotalMinutes} min left";
                badgeClass = "bg-danger";
            }
            else
            {
                timeText = "Ending soon!";
                badgeClass = "bg-danger fw-bold";
            }

            <div class="col-md-6 col-lg-4">
                <div class="auction-card card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title mb-2">
                                <a asp-controller="Auction" asp-action="Details" asp-route-id="@auction.AuctionId"
                                   class="stretched-link text-decoration-none text-dark fw-semibold">
                                    @auction.Title
                                </a>
                            </h5>
                            <p class="text-muted mb-3">@auction.Description?.Substring(0, Math.Min(80, auction.Description.Length))...</p>
                        </div>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-semibold">Creator:</span> <span>@auction.Creator.Username</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-semibold">Current Price:</span>
                                <span class="badge bg-primary fs-6">$@((auction.CurrentPrice ?? auction.StartingPrice).ToString("N2"))</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge @badgeClass">@timeText</span>
                                <small class="text-muted">@auction.EndDate.ToString("MMM dd, yyyy hh:mm tt")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
