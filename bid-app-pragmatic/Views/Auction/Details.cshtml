@model bid_app_pragmatic.ViewModels.AuctionDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-12">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-body">
                <h2 class="card-title">@Model.Title</h2>
                
                @if (Model.IsEnded)
                {
                    <div class="alert alert-warning" role="alert">
                        <strong>This auction has ended.</strong>
                        @if (!string.IsNullOrEmpty(Model.WinnerUsername))
                        {
                            <p class="mb-0">Winner: <strong>@Model.WinnerUsername</strong> with a bid of <strong>$@Model.CurrentPrice.ToString("N2")</strong></p>
                        }
                        else
                        {
                            <p class="mb-0">This auction ended with no bids.</p>
                        }
                    </div>
                }
                
                <hr>
                
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Current Price</h5>
                        <h3 class="text-primary">$@Model.CurrentPrice.ToString("N2")</h3>
                        <p class="text-muted">Starting Price: $@Model.StartingPrice.ToString("N2")</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Time Remaining</h5>
                        @{
                            var timeRemaining = Model.EndDate - DateTime.Now;
                            if (Model.IsEnded)
                            {
                                <h4 class="text-danger">Ended</h4>
                            }
                            else if (timeRemaining.TotalDays >= 1)
                            {
                                <h4 class="text-success">@((int)timeRemaining.TotalDays) days</h4>
                            }
                            else if (timeRemaining.TotalHours >= 1)
                            {
                                <h4 class="text-warning">@((int)timeRemaining.TotalHours) hours</h4>
                            }
                            else
                            {
                                <h4 class="text-danger">@((int)timeRemaining.TotalMinutes) minutes</h4>
                            }
                        }
                        <p class="text-muted">Ends: @Model.EndDate.ToString("MM/dd/yyyy hh:mm tt")</p>
                    </div>
                </div>
                
                <h5>Description</h5>
                <p class="lead">@Model.Description</p>
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Created by:</strong> @Model.CreatorUsername</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Total Bids:</strong> @Model.Bids.Count</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-light">
                <h5 class="mb-0">Bid History</h5>
            </div>
            <div class="card-body">
                @if (Model.Bids.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Bidder</th>
                                    <th>Amount</th>
                                    <th>Date & Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bid in Model.Bids)
                                {
                                    <tr>
                                        <td>
                                            @bid.BidderUsername
                                            @if (bid == Model.Bids.First())
                                            {
                                                <span class="badge bg-success ms-2">Highest Bid</span>
                                            }
                                        </td>
                                        <td><strong>$@bid.Amount.ToString("N2")</strong></td>
                                        <td>@bid.BidDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No bids yet. Be the first to bid!</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow sticky-top" style="top: 20px;">
            <div class="card-body">
                <h5 class="card-title">Place Your Bid</h5>
                
                <div class="mb-3">
                    <p class="mb-1"><strong>Your Wallet:</strong></p>
                    <h4 class="text-success">$@Model.UserWallet.ToString("N2")</h4>
                </div>
                
                <hr>
                
                @if (Model.IsEnded)
                {
                    <div class="alert alert-secondary">
                        This auction has ended. Bidding is closed.
                    </div>
                }
                else
                {
                    <form asp-controller="Auction" asp-action="PlaceBid" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="auctionId" value="@Model.AuctionId" />
                        
                        <div class="mb-3">
                            <label for="bidAmount" class="form-label">Your Bid Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="bidAmount" name="bidAmount" 
                                       min="@(Model.CurrentPrice + 0.01M)" max="@Model.UserWallet" 
                                       step="0.01" required placeholder="Enter amount" />
                            </div>
                            <div class="form-text">
                                Minimum bid: $@((Model.CurrentPrice + 0.01M).ToString("N2"))
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Place Bid</button>
                        </div>
                    </form>
                    
                    <div class="mt-3">
                        <small class="text-muted">
                            <strong>Note:</strong> Funds will be deducted from your wallet if you win the auction.
                        </small>
                    </div>
                }
                
                <hr>
                
                <div class="d-grid">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        Back to Auctions
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @if (!Model.IsEnded)
        {
            <text>
            setTimeout(function() {
                location.reload();
            }, 30000);
            </text>
        }
    </script>
}