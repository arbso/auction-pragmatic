@model bid_app_pragmatic.ViewModels.AuctionDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="auction-details-hero text-white p-4 mb-4 rounded shadow-sm" style="background: linear-gradient(120deg, #0d6efd, #6610f2);">
    <div class="d-flex justify-content-between align-items-center flex-wrap">
        <h1 class="fw-bold mb-2">@Model.Title</h1>
        @if (!Model.IsEnded)
        {
            <span class="badge bg-success fs-6">
                @((Model.EndDate - DateTime.Now).TotalDays >= 1 ? $"{(int)(Model.EndDate - DateTime.Now).TotalDays} days left" :
                    (Model.EndDate - DateTime.Now).TotalHours >= 1 ? $"{(int)(Model.EndDate - DateTime.Now).TotalHours} hours left" :
                    $"{(int)(Model.EndDate - DateTime.Now).TotalMinutes} min left")
            </span>
        }
        else
        {
            <span class="badge bg-danger fs-6">Ended</span>
        }
    </div>
    <p class="lead mb-0">@Model.Description</p>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Current Price</h5>
                        <h3 class="text-primary">$@Model.CurrentPrice.ToString("N2")</h3>
                        <p class="text-muted">Starting Price: $@Model.StartingPrice.ToString("N2")</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Time Remaining</h5>
                        @{
                            var timeRemaining = Model.EndDate - DateTime.Now;
                            if (Model.IsEnded)
                            {
                                <h4 class="text-danger">Ended</h4>
                            }
                            else if (timeRemaining.TotalDays >= 1)
                            {
                                <h4 class="text-success">@((int)timeRemaining.TotalDays) days</h4>
                            }
                            else if (timeRemaining.TotalHours >= 1)
                            {
                                <h4 class="text-warning">@((int)timeRemaining.TotalHours) hours</h4>
                            }
                            else
                            {
                                <h4 class="text-danger">@((int)timeRemaining.TotalMinutes) minutes</h4>
                            }
                        }
                        <p class="text-muted">Ends: @Model.EndDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6"><strong>Created by:</strong> @Model.CreatorUsername</div>
                    <div class="col-md-6"><strong>Total Bids:</strong> @Model.Bids.Count</div>
                </div>

                @if (Model.IsEnded)
                {
                    <div class="alert alert-warning shadow-sm">
                        <strong>This auction has ended.</strong>
                        @if (!string.IsNullOrEmpty(Model.WinnerUsername))
                        {
                            <p class="mb-0">Winner: <strong>@Model.WinnerUsername</strong> with a bid of <strong>$@Model.CurrentPrice.ToString("N2")</strong></p>
                        }
                        else
                        {
                            <p class="mb-0">This auction ended with no bids.</p>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">Bid History</h5>
            </div>
            <div class="card-body">
                @if (Model.Bids.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Bidder</th>
                                    <th>Amount</th>
                                    <th>Date & Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bid in Model.Bids)
                                {
                                    <tr>
                                        <td>
                                            @bid.BidderUsername
                                            @if (bid == Model.Bids.First())
                                            {
                                                <span class="badge bg-success ms-2">Highest</span>
                                            }
                                        </td>
                                        <td><strong>$@bid.Amount.ToString("N2")</strong></td>
                                        <td>@bid.BidDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No bids yet. Be the first to bid!</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm sticky-top" style="top: 20px;">
            <div class="card-body">
                <h5 class="card-title mb-3">Place Your Bid</h5>

                <div class="mb-3">
                    <p class="mb-1"><strong>Your Wallet:</strong></p>
                    <h4 class="text-success">$@Model.UserWallet.ToString("N2")</h4>
                </div>

                <hr />

                @if (Model.IsEnded)
                {
                    <div class="alert alert-secondary text-center">
                        This auction has ended. Bidding is closed.
                    </div>
                }
                else
                {
                    <form asp-controller="Auction" asp-action="PlaceBid" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="auctionId" value="@Model.AuctionId" />

                        <div class="mb-3">
                            <label for="bidAmount" class="form-label">Your Bid Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="bidAmount" name="bidAmount"
                                       min="@(Model.CurrentPrice + 0.01M)" max="@Model.UserWallet"
                                       step="0.01" required placeholder="Enter amount" />
                            </div>
                            <div class="form-text">
                                Minimum bid: $@((Model.CurrentPrice + 0.01M).ToString("N2"))
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Place Bid</button>
                        </div>
                    </form>

                    <small class="text-muted mt-2 d-block">
                        <strong>Note:</strong> Funds will be deducted from your wallet if you win the auction.
                    </small>
                }

                <hr />

                <div class="d-grid">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        Back to Auctions
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @if (!Model.IsEnded)
        {
            <text>
                setTimeout(function () {
                    location.reload();
                }, 30000); // refresh every 30 seconds
            </text>
        }
    </script>
}
